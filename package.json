{
  "name": "AdoreDieuv2",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "create-release": "npx node-env-run --exec \"semantic-release --ci false\""
  },
  "dependencies": {
    "flow-typed": "^2.4.0",
    "lottie-react-native": "2.3.2",
    "react": "16.4.1",
    "react-native": "0.56.0",
    "react-native-mask-loader": "^0.0.3",
    "react-native-spinkit": "^1.1.1",
    "react-native-splash-screen": "^3.1.1",
    "react-native-textinput-effects": "^0.4.2",
    "react-native-vector-icons": "^4.6.0",
    "react-navigation": "^1.5.11",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-jest": "23.4.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react-native": "^5",
    "conventional-changelog-ember": "^2.0.1",
    "husky": "^1.0.0-rc.13",
    "jest": "23.5.0",
    "lint-staged": "^7.2.2",
    "react-test-renderer": "16.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "flow check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  },
  "release": {
    "analyzeCommits": {
      "preset": "ember",
      "releaseRules": [
        {
          "type": "readme",
          "scope": "README",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        }
      ]
    }
  },
  "jest": {
    "preset": "react-native"
  }
}
