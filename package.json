{
  "name": "AdoreDieuv2",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "create-release": "npx node-env-run --exec \"semantic-release --ci false\""
  },
  "dependencies": {
    "apisauce": "^0.16.0",
    "flow-typed": "^2.4.0",
    "lottie-react-native": "2.3.2",
    "react": "16.4.1",
    "react-native": "0.56.0",
    "react-native-animatable": "^1.3.0",
    "react-native-hamburger": "^0.0.2",
    "react-native-mask-loader": "^0.0.3",
    "react-native-paper": "^2.2.8",
    "react-native-spinkit": "^1.1.1",
    "react-native-splash-screen": "^3.1.1",
    "react-native-textinput-effects": "^0.4.2",
    "react-native-vector-icons": "^4.6.0",
    "react-navigation": "^2.14.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.2"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.47",
    "@babel/plugin-proposal-decorators": "^7.1.0",
    "@iteratec/semantic-release-bitbucket": "^1.1.1",
    "babel-jest": "23.4.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "conventional-changelog-ember": "^2.0.1",
    "flow-bin": "^0.80.0",
    "husky": "^1.0.0-rc.13",
    "jest": "23.5.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.3",
    "react-test-renderer": "16.4.1",
    "reactotron-react-native": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "flow check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "analyzeCommits": {
      "preset": "ember",
      "releaseRules": [
        {
          "type": "readme",
          "scope": "README",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        }
      ]
    }
  },
  "jest": {
    "preset": "react-native"
  }
}
