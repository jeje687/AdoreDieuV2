{
  "extends": ["airbnb", "prettier", "plugin:flowtype/recommended"],
  "plugins": ["prettier", "react-native", "flowtype", "eslint-plugin-json"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "prettier/prettier": ["error"],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "no-shadow": "off",
    "import/no-extraneous-dependencies": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@services", "./src/services"],
          ["@reducers", "./src/reducers"],
          ["@assets", "./src/assets"],
          ["@views", "./src/views"],
          ["@actions", "./src/actions"]
        ],
        "extensions": [".js", ".jsx", ".json"]
      }
    }
  }
}
